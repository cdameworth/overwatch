{
  "name": "overwatch-infrastructure-monitor",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --legacy-watch --ignore backend/db.json backend/server.js",
    "client": "live-server frontend --port=3000 --open=./index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "playwright test --grep \"visual\"",
    "test:performance": "playwright test --grep \"performance\"",
    "test:hover": "playwright test --grep \"hover\"",
    "test:all": "npm run test && npm run test:e2e",
    "test:setup": "playwright install",
    "test:comprehensive": "node tests/run-tests.js",
    "test:quick": "TEST_SUITE=hover npm run test:comprehensive",
    "test:ci": "CI=true npm run test:comprehensive",
    "test:debug": "DEBUG=true HEADED=true npm run test:comprehensive"
  },
  "dependencies": {
    "express": "^4.18.2",
    "lowdb": "1.0.0",
    "nanoid": "^3.3.4",
    "@octokit/rest": "^19.0.7",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "live-server": "^1.2.2",
    "nodemon": "^2.0.22",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/dom": "^9.3.3",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "lighthouse": "^11.3.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup/jest.setup.js"],
    "collectCoverageFrom": [
      "frontend/**/*.js",
      "backend/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.js",
      "<rootDir>/tests/integration/**/*.test.js"
    ]
  }
}
